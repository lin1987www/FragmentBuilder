<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat">
        <!-- 全螢幕 -->
        <!-- NoTitleBar -->
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>

        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>

        <!-- 背景底色 -->
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:colorBackground">@color/windowBackground</item>

        <item name="android:textColorHint">@color/md_grey_700</item>
        <item name="android:textColorPrimaryDisableOnly">@color/md_grey_700</item>

        <item name="selectableItemBackground">@drawable/highlight</item>
        <item name="selectableItemBackgroundBorderless">@drawable/highlight</item>
    </style>
</resources>